{{#if notEmpty}}
  {{filteredContent.length}} {{pluralize filteredContent.length 'Item'}}
  from
  {{filteredProducts.length}} {{pluralize filteredProducts.length 'Product'}}

  <div class="row">
    <div class="col-xs-12">
      <div class="checkboxes text-right">
        {{#each productCheckboxes}}
          <label>
            {{input type='checkbox' checked=isChecked}}
            {{product.displayName}}
          </label>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Size</th>
          <th class="items-id">ID</th>
          <th>Title</th>
          <th class="items-product">Product</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each filteredContent}}
          {{render 'item_row' this}}
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <a {{bind-attr href=csvData download=csvDownloadFilename title=csvDownloadFilename}}>
        Download CSV
      </a>
    </div>
  </div>
{{else}}
  Loading all items for {{products.length}}
  {{pluralize products.length 'Product'}}...
{{/if}}
